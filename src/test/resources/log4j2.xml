<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{HH:mm:ss}}{blue} %highlight{%-5level} %msg%n"
                    disableAnsi="false"
                    noConsoleNoAnsi="false" />
        </Console>

        <File name="FileLogger" fileName="${sys:logFilename}">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5level] %msg%n"
                    disableAnsi="true"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileLogger" />
        </Root>
    </Loggers>
</Configuration>
